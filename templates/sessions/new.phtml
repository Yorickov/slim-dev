{% extends 'layouts/app.phtml' %}

{% block content %}
    <div class="container">
        <div class="row pt-5">
            <div class="col-sm-4 mx-auto">
                <form action="{{ path_for('session#create') }}" method="post">
                    <div class="form-group">
                        <label for="input_nickname">Nickname *</label>
                        <input id="input_nickname" required class="form-control" type="text" name="user[nickname]" value="{{ userData.nickname ?? '' }}">
                    </div>
                    <div class="form-group">
                        <label for="input_password">Password *</label>
                        <input id="input_password" required class="form-control" type="text" name="user[password]" value="{{ userData.password ?? '' }}">
                    </div>   
                    <div class="form-group">
                        <button class="btn btn-block btn-primary" type="submit" value="create">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
